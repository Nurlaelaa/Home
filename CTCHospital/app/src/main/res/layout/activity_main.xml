<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/pertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wellcome To"
        android:textColor="@color/ijo_tosca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/kedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pertama"
        android:text="Check To Check Hospital"
        android:textColor="@color/ijo_tosca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/ketiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pertama"
        android:text="@string/in_tegal"
        android:textColor="@color/ijo_tosca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/keempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ketiga
"
        android:text="@string/in_tegal"
        android:textColor="@color/ijo_tosca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


    <ImageView
        android:id="@+id/imguser"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ketiga"
        android:layout_centerHorizontal="true"

        android:src="@drawable/user"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="230dp" />

    <ImageView
        android:id="@+id/imgpassword"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_below="@+id/imguser"
        android:layout_centerHorizontal="true"

        android:src="@drawable/password"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imgcentang"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_below="@+id/imgpassword"
        android:layout_centerHorizontal="true"

        android:src="@drawable/centang"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="380dp" />

</androidx.constraintlayout.widget.ConstraintLayout>